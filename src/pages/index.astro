---
import reposData from '../data/repos.json';
import mediaData from '../data/media.json';
import '../styles/global.css';

const categories = ["All", "Foundations", "Agentic Architecture", "Math", "Infrastructure", "Projects", "MLOps"];

// Unified Resource Logic
const repos = await Promise.all(reposData.map(async (repo) => {
  try {
    const res = await fetch(`https://api.github.com/repos/${repo.id}`, {
      headers: import.meta.env.GITHUB_TOKEN ? { Authorization: `token ${import.meta.env.GITHUB_TOKEN}` } : {}
    });
    const data = await res.json();
    return {
      id: repo.id,
      name: data.name || repo.id.split('/')[1],
      desc: repo.customDesc || data.description || "Essential AI logic.",
      stars: data.stargazers_count ? (data.stargazers_count / 1000).toFixed(1) + 'k' : '0.0k',
      url: data.html_url,
      category: repo.category,
      level: repo.level || "Beginner",
      type: "GitHub",
      isStarter: repo.starter || false
    };
  } catch (e) {
    return { id: repo.id, name: repo.id, desc: "Source link", stars: "‚Äî", url: `https://github.com/${repo.id}`, category: repo.category, type: "GitHub", level: repo.level || "Beginner", isStarter: repo.starter || false };
  }
}));

const allGems = [...repos, ...mediaData.map(m => ({ ...m, id: m.url, name: m.title, stars: m.type, type: m.type, isStarter: m.starter || false }))];

const paths = [
  { name: "Beginner", duration: "4-8 Weeks", resources: "45 Items", icon: "üå±", items: ["Python Programming", "Math for ML", "Linear Algebra"] },
  { name: "Intermediate", duration: "8-16 Weeks", resources: "60 Items", icon: "‚öôÔ∏è", items: ["Deep Learning", "PyTorch/TensorFlow", "Transformers"] },
  { name: "Advanced", duration: "12-24 Weeks", resources: "80 Items", icon: "üß†", items: ["LLM Fine-tuning", "RAG Systems", "AI Agents"] },
  { name: "Frontier", duration: "Ongoing", resources: "30 Items", icon: "üåå", items: ["Research Papers", "Scaling Laws", "Multimodal"] }
];
